lista_num = [1, 5, 6, 13]
lista_animais = ['cachorro', 'gato', 'papagaio']
lista_mista = [True, 3, 'arvore']

print(lista_num[3])

nova_lista = lista_num*3
print(nova_lista)

new_animal = input('Escolha um animal: ')

if new_animal in lista_animais:
    resp = input('{} está na lista. Você deseja remover? '.format(new_animal))
    if resp == 'sim':
        lista_animais.remove(new_animal)
        print('{} foi removido da lista'.format(new_animal))
    else:
        print('lista não mudou')
else:
    resposta = input('{} não está na lista. Você deseja add? '.format(new_animal))
    if resposta == 'sim':
        lista_animais.append(new_animal)
        print('{} foi add a lista.'.format(new_animal))
    else:
        print('{} não foi add a lista.'.format(new_animal))
print(lista_animais)

tupla_animais = tuple(lista_animais)
# Lembrando que tuplas não são modificaveis

conjunto = {1, 2, 6, 15, 7}
conjunto_animais = set(lista_animais)
dic = {um:1, dois:2, tres:3}